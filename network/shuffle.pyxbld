import os.path

def make_ext(modname, pyxfilename):
	from distutils.extension import Extension
	return Extension(name=modname,
                     sources=[pyxfilename],
					 include_dirs=[os.path.dirname(pyxfilename)],
                     extra_compile_args=['-O3', '-std=c++11'],
					 libraries=['stdc++'],
					 language='C++')
